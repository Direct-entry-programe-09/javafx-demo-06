<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="455.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TableFormController">
   <children>
      <TableView fx:id="tblCustomers" layoutX="18.0" layoutY="223.0" prefHeight="217.0" prefWidth="563.0" AnchorPane.leftAnchor="18.0" AnchorPane.rightAnchor="19.0">
        <columns>
          <TableColumn prefWidth="105.0" text="ID" />
          <TableColumn prefWidth="193.0" text="Name" />
            <TableColumn prefWidth="287.0" text="Address" />
        </columns>
      </TableView>
      <VBox layoutX="25.0" layoutY="66.0" spacing="1.0">
         <children>
            <Label text="Customer Id" />
            <TextField fx:id="txtId" promptText="Ex: C001" />
            <Label text="Customer Name" />
            <TextField fx:id="txtName" promptText="Ex: Shanilka" />
            <Label text="Customer Address" />
            <TextField fx:id="txtAddress" promptText="Ex: Panadura" />
         </children>
      </VBox>
      <Button fx:id="btnSaveCustomer" layoutX="215.0" layoutY="85.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="120.0" style="-fx-background-color: blue; -fx-text-fill: white;" text="Save Customer" />
      <Button fx:id="btnNewCustomer" layoutX="25.0" layoutY="25.0" mnemonicParsing="false" style="-fx-background-color: #F026B8; -fx-text-fill: white;" text="New Customer +" />
      <Button fx:id="btnDeleteCustomer" blendMode="COLOR_BURN" layoutX="215.0" layoutY="122.0" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" text="Delete Customer" />
   </children>
</AnchorPane>
